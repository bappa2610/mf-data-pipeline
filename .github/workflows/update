name: Update Mutual Fund Data

on:
  schedule:
    # EVERY 2 HOURS (UTC)
    - cron: '0 */2 * * *'

  workflow_dispatch:

jobs:
  update:
    runs-on: ubuntu-latest

    permissions:
      contents: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          pip install requests pandas

      - name: Create data directory
        run: mkdir -p data

      # -------- TASKS (EVERY 2 HOURS) --------

      - name: Fetch Scheme Codes
        run: python scripts/fetch_scheme_codes.py

      - name: Fetch Scheme Categories
        run: python scripts/fetch_scheme_categories.py

      - name: Merge Scheme Metadata
        run: python scripts/merge_scheme_metadata.py

      - name: Fetch NAV History (Incremental)
        run: python scripts/fetch_nav_history.py

      - name: Export NAV Year CSV
        run: python scripts/export_nav_year.py

      # -------- COMMIT & PUSH --------

      - name: Commit and push changes
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add data/
          git commit -m "Auto update MF data" || echo "No changes"
          git push https://$PAT_TOKEN@github.com/${{ github.repository }} HEAD:${{ github.ref }}
        env:
          PAT_TOKEN: ${{ secrets.PAT_TOKEN }}
